<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="30" Padding="30">

            <Label Text="BASIC CALCULATOR"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <Entry x:Name="Input1"
                   Placeholder="Enter first number"
                   Keyboard="Numeric" />

            <Entry x:Name="Input2"
                   Placeholder="Enter second number"
                   Keyboard="Numeric" />
            

            <Grid ColumnDefinitions="*,*" RowDefinitions="*,*" ColumnSpacing="10" RowSpacing="10">
                
                <Button Text="ADD (+)" 
                        Grid.Row="0" Grid.Column="0" 
                        Clicked="OnAddClicked"/>
                
                <Button Text="SUBTRACT (-)" 
                        Grid.Row="0" Grid.Column="1" 
                        Clicked="OnSubtractClicked"/>
                
                <Button Text="MULTIPLY (x)" 
                        Grid.Row="1" Grid.Column="0"
                        Clicked="OnMultiplyClicked"/>
                
                <Button Text="DIVIDE (/)" 
                        Grid.Row="1" Grid.Column="1" 
                        Clicked="OnDivideClicked"/>
            </Grid>

            
            <Label x:Name="ResultLabel"
                   Text="RESULT: "
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
